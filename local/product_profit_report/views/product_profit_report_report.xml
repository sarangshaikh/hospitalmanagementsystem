<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_profit_report_tree" model="ir.ui.view">
		<field name="name">Product Profit Report Tree</field>
		<field name="model">product.profit.report</field>
		<field name="arch" type="xml">
			<tree string="Product Profit Tree" create="false">
				<field name="name"/>
				<field name="user_id" invisible="context.get('is_salesperson_external')"/>
				<field name="external_sale_person" invisible="not context.get('is_salesperson_external')"/>
				<field name="invoice_id"/>
				<field name="invoice_date"/>
				<field name="sale_qty"/>
				<field name="landed_cost"/>
				<field name="avg_pur_price"/>
				<field name="purchase_price"/>
                <field name="sale_price"/>
                <field name="net_profit"/>
                <field name="profit_percent" widget="progressbar"/>
			</tree>
		</field>
	</record>

    <record model="ir.ui.view" id="view_product_profit_report_report_pivot">
        <field name="name">product.profit.report.pivot</field>
        <field name="model">product.profit.report</field>
        <field name="arch" type="xml">
            <pivot string="Profit Report">
				<field name="name"/>
				<field name="user_id"/>
				<field name="external_sale_person"/>
				<field name="invoice_id"/>
				<field name="invoice_date"/>
				<field name="sale_qty"/>
				<field name="landed_cost"/>
				<field name="avg_pur_price"/>
				<field name="purchase_price"/>
                <field name="sale_price"/>
                <field name="net_profit"/>
                <field name="profit_percent"/>
            </pivot>
        </field>
    </record>

</odoo>
