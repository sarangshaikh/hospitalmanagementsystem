<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_profit_wizard_view" model="ir.ui.view">
        <field name="name">Product Profit Report</field>
        <field name="model">product.profit.wizard</field>
        <field name="arch" type="xml">
        	<form>
					<group>
						<group>
							<field name="from_date"/>
							<field name="to_date"/>
						</group>
						<group>
							<field name="company" groups="base.group_multi_company" options='{"no_open": True, "no_create": True}'/>
						</group>
						<group>
							<field name="is_external"/>
							<field name="user_id"  options='{"no_create": True}' widget="many2many_tags"/>
							<field name="is_salesperson_external" invisible="1"/>
							<field name="external_sale_person"  options='{"no_create": True}' widget="many2many_tags"  attrs="{'invisible': [('is_salesperson_external','=',False)],'required':[('is_salesperson_external','=',True)]}"/>
<!--							<field name="product_id"  options='{"no_create": True}' widget="many2many_tags"/>-->
						</group>
					</group>

        		<footer>
	                <button name="action_open_window" string="Profit Report" icon="fa-print" type="object" context="{'pdf':1}" default_focus="1" class="oe_highlight" />
	                or
					<button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
			</form>
        </field>
    </record>



	<record
		id="action_product_profit_report" model="ir.actions.act_window">
        <field name="name">Product Profit</field>
        <field name="res_model">product.profit.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_profit_wizard_view"/>
        <field name="target">new</field>
    </record>


	<menuitem id="menu_product_profit_report" name="Product Profit Report" action="action_product_profit_report" parent="account.menu_finance_legal_statement" sequence="21"/>

</odoo>

